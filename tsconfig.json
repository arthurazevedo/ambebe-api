{
  "compilerOptions": {

    "target": "es2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                           
    "allowJs": true,                      
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"], 
      "@models/*": ["./src/models/*"], 
      "@config/*": ["./src/config/*"], 
      "@types-m/*": ["./src/types-m/*"]
    }
  }
}
